@model MooshakV2.ViewModels.UserDetailViewModel

@{
    ViewBag.Title = "delete";
}

<h2>delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Html.DisplayFor(m => m.name)</h4>

    

    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(m => m.userModel.userName)
        </dt>

        <dd>
            @Html.DisplayFor(m => m.userModel.userName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ssn)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ssn)
        </dd>

        <dt>
            @Html.DisplayNameFor(m => m.userModel.email)
        </dt>

        <dd>
            @Html.DisplayFor(m => m.userModel.email)
        </dd>

        <dt>
            @Html.DisplayNameFor(m => m.userModel.roleName)
        </dt>

        <dd>
            @Html.DisplayFor(m => m.userModel.roleName)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.userModel.userName)
        @Html.HiddenFor(m => m.userModel.email)
        @Html.HiddenFor(m => m.userModel.roleName)
        @Html.HiddenFor(m => m.name)
        @Html.HiddenFor(m => m.ssn)
        <div class="btn-group btn-group" role="group" aria-label="...">
            <a href="@Url.Action("Index")" 
               class="btn btn-default"
               data-toggle="tooltip"
               data-placement="top"
               title="Back to list">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            </a>
            <button type="submit" 
                    class="btn btn-default"
                    data-toggle="tooltip"
                    data-placement="top"
                    title="Delete user">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </button>
        </div>
    }
</div>


@section scripts
{
    @Scripts.Render("~/Scripts/renderTooltips.js")
}
