@model MooshakV2.ViewModels.CourseDetailViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Model.course.title
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.course.description</td>
            </tr>
        </tbody>
    </table>






    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        
        <!-- accordion Assignments start -->
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="assignments">
                <h4 class="panel-title">
                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseAssignments" aria-expanded="true" aria-controls="collapseAssignments">
                        Assignments
                    </a>
                </h4>
            </div>
            <div id="collapseAssignments" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="assignment">
                <div class="panel-body">
                    <table class="table" id="assignmentTable">
                        <thead>
                        <tr>
                            <th>
                                @Html.Label("Title", htmlAttributes: new {@class = "control-label col-md-2"})
                            </th>
                            <th>
                                @Html.Label("Description", htmlAttributes: new {@class = "control-label col-md-2"})
                            </th>
                        </tr>
                        </thead>

                        <tbody>
                        @foreach(var item in Model.assignmentList)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.title)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.description)
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group" aria-label="...">
                                        <button type="button"
                                                class="btn btn-default modalDetailButton"
                                                data-tooltip="true"
                                                data-placement="top"
                                                title="Assignment details"
                                                data-toggle="modal"
                                                data-target="#assignmentDetails"
                                                data-title="@item.title"
                                                data-descr="@item.description"
                                                data-weight="@item.weight"
                                                data-courseId="@item.courseId">
                                            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- accordion Assignments end -->


        <!-- accordion Student list start -->

        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="students">
                <h4 class="panel-title">
                    <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseStudents" aria-expanded="false" aria-controls="collapseStudents">
                        Student List
                    </a>
                </h4>
            </div>
            <div id="collapseStudents" class="panel-collapse collapse" role="tabpanel" aria-labelledby="students">
                <div class="panel-body">

                    <table class="table">
                        <tr>
                            <th>
                                @Html.Label("User Name", htmlAttributes: new {@class = "control-label col-md-2"})
                            </th>
                            <th>
                                @Html.Label("Email", htmlAttributes: new {@class = "control-label col-md-2"})
                            </th>
                            <th></th>
                        </tr>

                        @foreach(var item in Model.studentList)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.userModel.userName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.userModel.email)
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group" aria-label="...">
                                        <button type="button"
                                                class="btn btn-default modalDetailButton"
                                                data-tooltip="true"
                                                data-placement="top"
                                                title="User details"
                                                data-toggle="modal"
                                                data-target="#userDetails"
                                                data-name="@item.name"
                                                data-uname="@item.userModel.userName"
                                                data-email="@item.userModel.email"
                                                data-ssn="@item.ssn"
                                                data-role="@item.userModel.roleName">
                                            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                                            Details
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>

        <!-- accordion Student list end -->


        <!-- accordion TA list start -->
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="TAs">
                <h4 class="panel-title">
                    <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTAs" aria-expanded="false" aria-controls="collapseTAs">
                        TA List
                    </a>
                </h4>
            </div>
            <div id="collapseTAs" class="panel-collapse collapse" role="tabpanel" aria-labelledby="TAs">
                <div class="panel-body">

                    <table class="table">
                        <tr>
                            <th>
                                @Html.Label("User Name", htmlAttributes: new { @class = "control-label col-md-2" })
                            </th>
                            <th>
                                @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-2" })
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model.taList)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.userModel.userName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.userModel.email)
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group" aria-label="...">
                                        <button type="button"
                                                class="btn btn-default modalDetailButton"
                                                data-tooltip="true"
                                                data-placement="top"
                                                title="User details"
                                                data-toggle="modal"
                                                data-target="#userDetails"
                                                data-name="@item.name"
                                                data-uname="@item.userModel.userName"
                                                data-email="@item.userModel.email"
                                                data-ssn="@item.ssn"
                                                data-role="@item.userModel.roleName">
                                            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                                            Details
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
        <!-- accordion TA list end -->


        <!-- accordion Teacher list start -->
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="Teachers">
                <h4 class="panel-title">
                    <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTeachers" aria-expanded="false" aria-controls="collapseTeachers">
                        Teacher List
                    </a>
                </h4>
            </div>
            <div id="collapseTeachers" class="panel-collapse collapse" role="tabpanel" aria-labelledby="Teachers">
                <div class="panel-body">

                    <table class="table">
                        <tr>
                            <th>
                                @Html.Label("User Name", htmlAttributes: new { @class = "control-label col-md-2" })
                            </th>
                            <th>
                                @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-2" })
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model.teacherList)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.userModel.userName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.userModel.email)
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group" aria-label="...">
                                        <button type="button"
                                                class="btn btn-default modalDetailButton"
                                                data-tooltip="true"
                                                data-placement="top"
                                                title="User details"
                                                data-toggle="modal"
                                                data-target="#userDetails"
                                                data-name="@item.name"
                                                data-uname="@item.userModel.userName"
                                                data-email="@item.userModel.email"
                                                data-ssn="@item.ssn"
                                                data-role="@item.userModel.roleName">
                                            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                                            Details
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
        <!-- accordion Teacher list end -->
    </div>


    <br />

    <div class="btn-group btn-group" role="group" aria-label="...">
        <a href="@Url.Action("Index", new {id = Model.course.id})"
           class="btn btn-default"
           data-tooltip="true"
           data-placement="top"
           title="Back to course list">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        </a>
    </div>
</div>

<!-- Assignment Detail Modal -->
<div class="modal fade" id="assignmentDetails" tabindex="-1" role="dialog" aria-labelledby="assignmentDetailsLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="assignmentTitle"></h4>
            </div>
            <div class="modal-body">
                <dt>
                    Description
                </dt>
                <dd id="assignmentDescr"></dd>
                <dt>
                    Weight
                </dt>
                <dd id="assignmentWeight"></dd>
                <dt>
                    ID
                </dt>
                <dd id="courseId"></dd>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

<!-- User Detail Modal -->
<div class="modal fade" id="userDetails" tabindex="-1" role="dialog" aria-labelledby="userDetailsLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="userDetailsLabel"></h4>
            </div>
            <div class="modal-body">
                <dt>
                    User Name
                </dt>
                <dd id="userName"></dd>

                <dt>
                    Email
                </dt>
                <dd id="email"></dd>

                <dt>
                    SSN
                </dt>
                <dd id="ssn_detail"></dd>

                <dt>
                    Role
                </dt>
                <dd id="role"></dd>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/Scripts/renderTooltips.js")
    @Scripts.Render("~/Scripts/UserDetailModal.js")
    @Scripts.Render("~/Scripts/AssignmentDetailModal.js")
}