@model IEnumerable<MooshakV2.ViewModels.HistoryViewModel>

@{
    ViewBag.Title = "History";
}

<h2>History</h2>

<div class="row">
    <div class="col-md-8">
        <a href="@Url.Action("List")" class="btn btn-default" data-tooltip="true" data-placement="right" title="Go back to Assignments">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        </a>
    </div>
</div>

<br />


<table class="table">
    <tr>
        <td>
            ID
        </td>
        <td>
            User
        </td>
        <td>
            Course
        </td>
        <td>
            Assignment
        </td>
        <td>
            Assignment Part
        </td>
        <td>
            Success
        </td>
        <td>
            Count
        </td>
        <td>
            File Name
        </td>
        <td>
            Date
        </td>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.userName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.course)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.assignment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.assignmentPart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.success)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.filename)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
    </tr>
}

</table>


@section scripts
{
    @Scripts.Render("~/Scripts/renderTooltips.js")
}