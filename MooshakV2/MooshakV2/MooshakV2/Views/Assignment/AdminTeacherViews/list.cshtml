@model IEnumerable<MooshakV2.ViewModels.AssignmentViewModel>

@{
    ViewBag.Title = "List";
}

<h2>Assignments</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-default">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Create a New Assignment
    </a>
</p>

@using (Html.BeginForm("listAssignmentsInCourse", "Assignment", FormMethod.Get))
{
    <div class="col-md-10">
        @Html.DropDownList("id", ViewData["Courselist"] as IEnumerable<SelectListItem>, new { @class = "form-control" })
        
        <input type="submit" value="Filter" />
    </div>
}

<table class="table table-hover">
    <tr>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            Weight
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.weight)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.id })" class="btn btn-default">
                <span id="but" class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                Edit
            </a>
            <a href="@Url.Action("Details", new { id = item.id })" class="btn btn-default">
                <span id="but" class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                Details
            </a>
            <a href="@Url.Action("Remove", new { id = item.id })" class="btn btn-default">
                <span id="but" class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                Delete
            </a>
        </td>
    </tr>
}

</table>
